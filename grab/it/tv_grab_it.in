my $OFF; my $CAT;

sub skylife_fetch_data {
    my ($xmltv_id, $offset) = @_;
    my $content;

    my $site_id = $backend_info{skylife}{site_ids}{$xmltv_id}{site_id};
    if (not defined $site_id) {
        warn ($DEF_LANG eq 'eng' ?
                         "VERBOSE: \tThis site doesn't know about $xmltv_id!\n" : 
                         "VERBOSE: \tQuesto sito non sa niente di $xmltv_id!\n" ) if ($opt_verbose);
        return (1, ());
    }

    # build url to grab
    #warn "site id $site_id,  ",$backend_info{skylife}{channels}{$site_id}."\n";
    my ($url, $row) = split /;/, $backend_info{skylife}{channels}{$site_id};
    $url=~/(.*)_\d.xml/;
    $url = $1."_".($offset+1).".xml";
    my $url_domani = $1."_".($offset+2).".xml";
    my $categoria = skylife_get_cat($url);


    $OFF=$offset; $CAT=$categoria;    

    my @urls =($url, $url_domani);

	#to trick memoize into not caching data with add a string to the url, based on time, with hourly resolution
	#so if we redownload data within 5 minutes (we are within the same run) it comes from the cache
	#but if we download it tomorrow it doesn't.
	#this makes sense if you use the --cache option and you want to cache only the --slow data, to speed up things 
	#when you grab data every two-three days, but you don't want to miss schedule changes
	#this string is ignored by the server

	my $cachestring = "?pippo=".UnixDate("today","%Y%m%d%H");

	my $grabdate      = UnixDate(&DateCalc("today","+ ".$offset." days"), '%Y%m%d');
	    
	my @prog_to_check = ();

    my $offset2 = 0;
    foreach my $url2 (@urls) {
    	my $grabdate      = UnixDate(&DateCalc("today","+ ".($offset + $offset2)." days"), '%Y%m%d');
        my $starttime = ParseDate("$grabdate 00:00");
        die 'date calculation failed' if (! $starttime);

	$url2.=$cachestring if ($opt_cache_slow);

        warn "VERBOSE: fetching $url2\n"  if ($opt_verbose);

        eval { $content=get_nice($url2) };
        if ($@) {   #get_nice has died
                warn ($DEF_LANG eq 'eng' ? 
                          "VERBOSE: Error fetching $url channel $xmltv_id day $offset backend skylife\n" :
                          "VERBOSE: Errore nello scaricare $url, canale $xmltv_id, giorno $offset, fonte skylife\n") if ($opt_verbose);

            # Indicate to the caller that we had problems
            return (1, ());
        } 

	    warn "VERBOSE: parsing...\n" if ($opt_verbose);
        
	    #split and parse the lines
    	    $content=~/<div id=\"contenuti\">(.*)/;
	    my @lines = split /<div class=\"linea\">/, $content;

	    #quella che ci interessa e' $row
	    my @lines2 = split /<div class=\"p/, $lines[$row];

	    foreach my $line2 (@lines2) {
       		   $line2=~/\"width:(.*?)px\".*id=\"(.*?)\".*?>(.*?)</;
		   if (not defined $3) { #se il primo programma non ha titolo perche' e' la fine di quello del giorno prima
			   $line2=~/^.\" style=\"width:(\d+?)px\"> <\/div>$/;
			   
			   my $res = $1;
			   #warn "ocio inizio linea diverso!\n\n";
			   if (defined $res and $res=~/^\d+$/) {
			   #warn "linizio 1 sarebbe |$res|\n";
                	   $starttime = &DateCalc($starttime, "+ ".($res /4)." minutes") || die ($DEF_LANG eq 'eng' ? 'date calculation failed' : 'errore di calcolo data');
			   }
			   next;
		   }
            my ($title, $length, $id) = ($3, $1 / 4, $2);
 	    my $start = $starttime;
	    $starttime = &DateCalc($starttime, "+ ".$length." minutes") || die ($DEF_LANG eq 'eng' ? 'date calculation failed' : 'errore di calcolo data');
	    my $stop = $starttime;
	    push @prog_to_check, [$title, $length, $id, $start, $stop];

	    }
    $offset2++;
    }

    my @programmes = ();
    my ($oldtitle, $oldlength, $oldid, $oldstart, $oldstop) = ('', '', 0, '', '');
    #TODO OCIO CHECK DATA NELL XML SIA QUELLA GIUSTA
    #prendiamo l'inizio del primo programma del giorno dopo come fine dell'ultimo del giorno prima
    my %programme = ();

    my $parse_date = &DateCalc("today 00:00","+ ".$offset." days");
    my $next_day   = &DateCalc("today 00:00","+ ".($offset + 1)." days");

    foreach (@prog_to_check) {
        my ($title, $length, $id, $start, $stop) = @$_;
	last if ($start eq $oldstop and $start=~/00:00:00$/);
        if ($oldtitle ne '' and UnixDate(ParseDate($oldstop), '%H%M') ne '0000') {
            $programme{title} = [[tidy($oldtitle), $LANG] ];
            $programme{start} = utc_offset(UnixDate($oldstart, '%Y%m%d%H%M').'00', '+0100');
            $programme{stop}  = utc_offset(UnixDate($oldstop, '%Y%m%d%H%M').'00', '+0100');
            $programme{channel} = $xmltv_id;
            skylife_fetch_data_slow($oldid, \%programme) if ($opt_slow);
            push @programmes, {%programme} if ($oldstart and $oldtitle);
        }
        %programme = ();
	
	my $d = UnixDate(ParseDate($oldstop), '%H%M');
	if (not defined ($d) or $d ne '0000') {
    	    ($oldtitle, $oldlength, $oldid, $oldstart, $oldstop) = @$_ ;
	    }
            
        #we don't care about tomorrow's data
	if (Date_Cmp(ParseDate($start), ParseDate($next_day)) > 0){ #abbiamo cambiato giorno
    	    $oldstop = $start unless $start=~/00:00:00$/; #se il programma finiva esattamente a mezzanotte
	    last;
	}
    }

    #scrivo l'ultimo programma
    $programme{title} = [[tidy($oldtitle), $LANG] ] if ($oldtitle);
    $programme{start} = utc_offset(UnixDate($oldstart, '%Y%m%d%H%M').'00', '+0100') if ($oldstart);
    $programme{stop}  = utc_offset(UnixDate($oldstop, '%Y%m%d%H%M').'00', '+0100') if ($oldstop);
    $programme{channel} = $xmltv_id;
    skylife_fetch_data_slow($oldid, \%programme) if ($opt_slow);
    push @programmes, {%programme} if ($oldid ne '' and $oldstart and $oldtitle);

    if (scalar @programmes) {
        return (0, @programmes);
    }
    else {
        # there is a number of reasons why we could get an empty array.
        # so we return an error 
        return (1, @programmes);
    }
}

sub skylife_fetch_data_slow_get {
    my $id = shift;
    my $url = 'http://www.skylife.it/static/epg/timeline/data/c'.$CAT.'/d'.($OFF+1).'/'.$id.'.xml';
    my $content;
#warn "fetching $id, domani non dovrei farlo...\n";
    warn ($DEF_LANG eq 'eng' ?
                  "VERBOSE: getting --slow data from $url" :
                  "VERBOSE: prendo dati --slow da $url") if ($opt_verbose); 
    eval { $content=get_nice($url) };
    if ($@) {   #get_nice has died
	return undef;
    }
    
    return $content;
}

sub skylife_fetch_data_slow {
    my ($id, $programme) = @_;

    my $content = skylife_fetch_data_slow_get($id);
    
    if (not defined $content) {
        warn ($DEF_LANG eq 'eng' ?
                      "VERBOSE: there was some error!" :
	              "VERBOSE: c'e' stato qualche errore!") if ($opt_verbose);
	return 0;
    }


    my $titolo;
    if ($content=~/<div class=\"popupgenere\">(.*?)<\/div>/) {
	my $category = $1;
	my @cats = skylife_split_cats($category);
	foreach (@cats) {push (@{$programme->{category}}, [tidy($_), $LANG ]) if ($_ ne '');}
    }
    
    if ($content=~/<div class=\"parental1\">(.*?)<\/div>/) {
        $titolo = $1;
        @{$programme->{title}} = [tidy($titolo), $LANG]  if ($titolo ne '');
    }

   
    if ($content=~/<div class=\"testo\">(.*?)<\/div>/) {
	my $desc = $1;
    
	my ($cast, $country, $director, $year, $length, $subtitle);

        if ($desc=~/(.*?) - (.*)/) {
	    $subtitle = $1 if ($1 ne '' and $1 ne $titolo);
            $desc = $2 if ($2 ne '');
        }
	
        if ($desc=~/^\'(.*?)\' (.*)/) {
	    $subtitle.= ' - ' if ($subtitle);
    	    $subtitle.= $1 if ($1 ne '' and $1 ne $titolo);
            $desc = $2 if ($2 ne '');
        }	


        if ($desc=~/^Regia di (.*?), con (.*?); (.*?) (\d+?) \((\d+) min\)\. (.*)/) {
            $director = $1;
            $cast = $2;
            $country = $3;
            $year = $4;
            my $length = $5;
            $desc = $6 || '';
        }

        if ($desc=~/^Regia di (.*?), con (.*?); (.*?) (\d+?)\. (.*)/) {
            $director = $1;
            $cast = $2;
            $country = $3;
            $year = $4;
            $desc = $5 || '';
        }

        if ($desc=~/^Con ([A-Z].*?)\. (.*)/) {
            $cast = $1;
            $desc = $2 || '';
	}

	#tricky one
        if ($desc=~/^con (.*?)\. (.*)/) {
	   $desc = $2;
	   $cast = $1;
   
	   if ($cast=~/(.*?); (.*)/) {
    		$cast = $1;
		$country = $2;
	    }
        }
	
	if ($cast) {
	   my $lastcast;
	   ($cast, $lastcast) = split / e /, $cast;
	   my @cast = split /,/, $cast; push @cast, $lastcast if ($lastcast);
           foreach (@cast) {
                s/^\s+//; s/\s+$//;
                (push @{$programme->{credits}->{actor}}, $_);
            }
	}
	
	
    $content=~s/[\n|\r]+//gm;	
    
    $programme->{length}= $length*60 if ($length);
    $programme->{date}= $year if ($year);
    $programme->{'sub-title'}=[[$subtitle, $LANG] ] if ($subtitle);	
    push @{$programme->{credits}->{director}}, $director if ($director);
    push (@{$programme->{country}}, [$country, $LANG]) if ($country);
    $programme->{desc}=[[tidy($desc), $LANG ]] if ($desc ne '');
    }

}

sub skylife_get_cat {
 my $url = shift;
 my %categories = ('cinema' => 1, 
		   'mondo'  => 2,
		   'sport'  => 6, 
		   'news'   => 5,
		   'ragazzi'=> 4, 
		   'intrattenimento' => 3);
 
 $url =~ /data\/(.*)_\d\.xml/;
 
 return $categories{$1}; 
}

sub skylife_split_cats {
  my $text = shift;
  my @res;
  
  if ($text=~/(Intrattenimento|Informazione)(.*)/) {@res=(tidy($2), tidy($1));}
    elsif ($text=~/(Non Definito|Mondo e Tendenze|Ragazzi e Musica|Altri Programmi)(.*)/) {@res=(tidy($2));}
    elsif ($text=~/(Film|Sport)(.*)/) {@res=(tidy($1), tidy($2));}
    else {  
	warn "--------------->Aggiungere categoria:|$text|\n";
	@res=(tidy($text));
     }
  
  return @res;
}