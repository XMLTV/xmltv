	    if ( $rate=~/(.*?)\t$/ ) { $rate=$1; if ($opt_debug){print "-->rating has tab\n";}}
	    if ( $rate=~/(.*?)\s*$/ ) { $rate=$1; if ($opt_debug){print "-->rating has space(s)\n";}}
	    if ($opt_debug) {print "found rating - $rate -|- $1 -|\n";}
	    ${$mainhash}{'rating'}=$rate;
